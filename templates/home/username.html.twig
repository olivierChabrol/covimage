{# templates/home/username.html.twig #}
{% extends 'home/layout.html.twig'%}

{% block header %}
    {% if username == "inconnu" %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('login') }}">Se connecter</a>
        </li>
    <li class="nav-item">
        <a class="nav-link" href="/signup">S'enregistrer</a>
    </li>
    {# To be moved under the else once signing-in will be operational : #}
    <li class="nav-item">
        <a class="nav-link" href="/new">Analyser</a>
    </li>
    {% else %}
        {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('user_index') }}">Gérer utilisateurs</a>
            </li>
        {% endif %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('logout') }}">Se déconnecter</a>
        </li>
    {% endif %}
{% endblock %}

{% block page_contents %}Bonjour {{username}}.
{% if username == "inconnu" %}
    <p>Il semblerait que vous ne soyez pas connecté. Connectez-vous pour accéder à plus d'options.</p>
{% endif %}

{% endblock %}
{% extends 'home/username.html.twig' %}

{% block title %}Analysis{% endblock %}

{% block body %}
    <h1>Analysis</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image_stack.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ image_stack.date ? image_stack.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ image_stack.name }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ image_stack.quantity }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ image_stack.token }}</td>
            </tr>
            <tr>
                <th>Analysed</th>
                <td>{{ image_stack.analysed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ image_stack.user }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('image_stack_index') }}">‚Üê Back to list</a>

    <a href="{{ path('image_stack_edit', {'id': image_stack.id}) }}">edit</a>


{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{% for item in user.roles %}
                    <span class="badge badge-secondary">{{item|split('_')[1]}}</span>
                {% endfor %}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password starts with '$2y$' ? '<i>Crypted Password</i>' : 'Clear pass : ' ~ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">Edit <i class="fas fa-pen"></i></a><br>
    <br>
    {{ include('user/_delete_form.html.twig') }}
    <br>
    <a class="btn btn-dark" href="{{ path('user_index') }}">‚Üê Back to list</a>
    <br>
{% endblock %}
